{
    // Font configuration
    "editor.fontFamily": "Iosevka",
    "editor.fontLigatures": true,
    "editor.fontSize": 12,

    // Window configuration
    "window.menuBarVisibility": "toggle",
    "explorer.confirmDelete": false,
    "explorer.autoReveal": false,
    "explorer.confirmDragAndDrop": false,
    "terminal.integrated.rendererType": "dom",

    // Looks
    "workbench.colorTheme": "Plastic",
    "debug.toolBarLocation": "docked",
    "liveServer.settings.donotShowInfoMsg": true,
    "vsicons.dontShowNewVersionMessage": true,
    "javascript.updateImportsOnFileMove.enabled": "never",

    // Files
    "files.autoSave": "onFocusChange",
    "files.insertFinalNewline": true,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/node_modules": true,
        "**/dist": true,
        "**/db": true,
        "**/yarn.lock": true,
        "**/package-lock.json": true
    },

    // NPM
    "npm.packageManager": "yarn",
    
    // XO
    "xo.enable": false, // set per project

    // ESLint
    "eslint.packageManager": "yarn",
    
    // Git
    "git.autofetch": true,
    "git.enableCommitSigning": true,
    "git.confirmSync": false,
    
    // Gitlens
    "gitlens.historyExplorer.enabled": true,
    "gitlens.advanced.messages": {
        "suppressShowKeyBindingsNotice": true
    },

    // Clock
    "clock.datetimeFormat": "HH:mm:ss",

    // Spotify
    "spotify.showMuteUnmuteVolumeButton": false,
    "spotify.showNextButton": false,
    "spotify.showPlayPauseButton": false,
    "spotify.showPreviousButton": false,
    "spotify.trackInfoFormat": "artistName -- trackName",
    
    // Dart path
    "dart.sdkPath": "/usr/lib/dart",
}
